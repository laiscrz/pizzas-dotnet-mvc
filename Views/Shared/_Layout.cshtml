<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzasHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_.styles.css" asp-append-version="true" />
    <style>
        .header-gradient {
            background: linear-gradient(90deg, #b71c1c, #f44336);
            padding: 20px 0; 
            min-height: 80px;
        }

        .footer-gradient {
            background: linear-gradient(90deg, #b71c1c, #d32f2f);
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark header-gradient shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-uppercase" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-pizza"></i> PizzasHub
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold" asp-area="" asp-controller="Pizza" asp-action="Index">
                                <i class="bi bi-card-list"></i> Pizzas
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container mt-4 mb-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer-gradient text-white py-4 mt-auto">
        <div class="container text-center">
            <div class="mb-2">
                <a class="text-decoration-none text-white mx-2" asp-controller="Home" asp-action="Index">Home</a> |
                <a class="text-decoration-none text-white mx-2" asp-controller="Pizza" asp-action="Index">Pizzas</a> 
            </div>
            <p class="mb-0">&copy; 2024 - <span class="fw-bold">PizzasHub</span>. Todos os direitos reservados.</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
