@model PizzaModel

<div class="container my-5">
    <div class="row align-items-center bg-body-tertiary shadow-sm rounded-3 p-4">
        <!-- Coluna da Imagem -->
        <div class="col-md-5 text-center">
            <img src="@Model.UrlCapa" class="img-fluid rounded" style="max-width: 100%; height: auto;" alt="Imagem da Pizza">
        </div>

        <!-- Coluna do Conteúdo -->
        <div class="col-md-7">
            <h1 class="text-primary fw-bold mb-4">@Model.Sabor</h1>
            <p class="fs-5 text-muted">@Model.Descricao</p>

            <!-- Lista de Preços -->
            <ul class="list-group list-group-flush mb-4">
                <li class="list-group-item bg-transparent">
                    <strong>Pequena:</strong> R$ @Model.Valor.ToString("N2")
                </li>
                <li class="list-group-item bg-transparent">
                    <strong>Média:</strong> R$ @((Model.Valor + 15).ToString("N2"))
                </li>
                <li class="list-group-item bg-transparent">
                    <strong>Grande:</strong> R$ @((Model.Valor + 25).ToString("N2"))
                </li>
            </ul>

            <!-- Botão Voltar -->
            <div class="text-center text-md-start">
                <a class="btn btn-info btn-lg shadow-sm" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-arrow-left-circle"></i> Voltar
                </a>
            </div>
        </div>
    </div>
</div>
